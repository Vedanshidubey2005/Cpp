// Online C++ compiler to run C++ program online
#include <iostream>
#include<bits/stdc++.h>
using namespace std;
class Node{
    public:
    int data;
    Node* next;
    public:
    Node(int data1 , Node* next1){
        data= data1;
        next=next1;
    }
    Node(int data1){
        data= data1;
        next = nullptr;
    }
};
//1
Node* arr2LL(vector<int>&arr){
    Node* head = new Node(arr[0]);
    Node* mover = head;
    for(int i = 0 ; i<arr.size();i++){
        Node* temp = new Node(arr[i]);
        mover->next=temp;
        mover=temp;
    }
    return head;
}
//2
void printLL(Node* head){
     Node* temp = head;
  while(temp){
      cout<< temp-> data << " ";
      temp = temp->next;
  } 
  cout<<endl;
}
//3
Node* deletehead(Node* head){
    if(head== NULL) return head;
    Node* temp = head;
    head = head->next;
    delete temp;
    return head;
}
//4
Node* deletetail(Node* head){
    if(head== NULL || head->next == NULL) return NULL;
    Node* temp = head;
    while(temp->next->next != NULL){
        temp=temp->next;
    }
    delete temp->next;
    temp->next = NULL;
    return head;
}
//5
Node* deleteknode(Node* head, int k){
    if(head==NULL) return head;
    if(k==1){
        Node* temp = head;
        head= head->next;
        free(temp);
        return head;
    }
    int cnt =0;
    Node* temp = head;
    Node* prev = NULL;
    while(temp!=NULL){
        cnt++;
        if(cnt == k ){
            prev->next = prev->next ->next;
            free(temp);
            break;
        }
        prev=temp;
        temp= temp->next;
    }
    return head;
}
//6
Node* deleteelement(Node* head, int el){
    if(head==NULL) return head;
    if(head->data== el){
        Node* temp = head;
        head= head->next;
        free(temp);
        return head;
    }
    int cnt =0;
    Node* temp = head;
    Node* prev = NULL;
    while(temp!=NULL){
        cnt++;
        if(temp->data == el ){
            prev->next = prev->next ->next;
            free(temp);
            break;
        }
        prev=temp;
        temp= temp->next;
    }
    return head;
}
int main() {
   vector<int>arr ={2,6,4,72,4};
  //normal node creation
//   Node* y = new Node(arr[3]);
//   cout<< y<<endl;  //0xae962b0  location
//   cout<< y->data<<endl;   //72 value
  //1
  Node* head=  arr2LL(arr);
  cout<< head->data  <<endl;  //2
  //2
  printLL(head);   // 2 6 4 72 4 
  //3
  
  head= deletehead(head);
  printLL(head);
  //4
head= deletetail(head);
  printLL(head);   //2 6 4 72 
  //5
//   head= deleteknode(head, 2);  //2 4 72 
    //  head= deleteknode(head, 5);  //2 6 4 72 
  head= deleteknode(head, 3);  //2 6 72 
  printLL(head); 
  //6
   head= deleteelement(head, 72);  //2 6 
  printLL(head); 
//   Node* temp = head;
//   while(temp){
//       cout<< temp-> data << " ";
//       temp = temp->next;
//   }    //2 6 4 72 4
    return 0;
}
