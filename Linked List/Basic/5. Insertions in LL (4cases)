// Online C++ compiler to run C++ program online
#include <iostream>
#include<bits/stdc++.h>
using namespace std;
class Node{
    public:
    int data;
    Node* next;
    public:
    Node(int data1 , Node* next1){
        data= data1;
        next=next1;
    }
    Node(int data1){
        data= data1;
        next = nullptr;
    }
};
//1
Node* arr2LL(vector<int>&arr){
    Node* head = new Node(arr[0]);
    Node* mover = head;
    for(int i = 0 ; i<arr.size();i++){
        Node* temp = new Node(arr[i]);
        mover->next=temp;
        mover=temp;
    }
    return head;
}
//2
void printLL(Node* head){
     Node* temp = head;
  while(temp){
      cout<< temp-> data << " ";
      temp = temp->next;
  } 
  cout<<endl;
}
//3
Node* inseetathead(Node* head, int val){
    if(head== NULL) return new Node (val,head);
    Node* temp = new Node(val,head);
    return temp;
}
//4
Node* insertattail(Node* head, int val){
 if(head== NULL) return new Node (val,head);
     Node* temp = head;
    while(temp->next != NULL){
        temp=temp->next;
    }
   Node* n1 = new Node(val);
   //n1->next=NULL;
   temp->next = n1;
    return head;
}
//5
Node* insertatk(Node* head,int el, int k){
    if(head==NULL) {
        if(k==1){
            return new Node(el,head);
        }
        else{
            return NULL;
        }
    }
    if(k==1){
    Node* temp = new Node(el,head);
    return temp;
    }
    int cnt =0;
    Node* temp = head;
    
    while(temp!=NULL){
        cnt++;
        if(cnt == k-1 ){
            Node* n1 = new Node(el);
            n1->next = temp->next;
            temp->next=n1;
            break;
        }
       
        temp= temp->next;
    }
    return head;
}
//6
Node* insertbeforeval(Node* head, int el, int val){
     if(head==NULL) {
            return NULL;
    }
    if(head->data==el){
    Node* temp = new Node(val,head);
    return temp;
    }
 
    Node* temp = head;
    while(temp->next!=NULL){
     
        if(temp->next->data==el ){
            Node* n1 = new Node(val);
            n1->next=temp->next;
            temp->next=n1;
            break;
        }
       
        temp= temp->next;
    }
    return head;
}
int main() {
   vector<int>arr ={2,6,4,72,4};
  //normal node creation
//   Node* y = new Node(arr[3]);
//   cout<< y<<endl;  //0xae962b0  location
//   cout<< y->data<<endl;   //72 value
  //1
  Node* head=  arr2LL(arr);
  cout<< head->data  <<endl;  //2
  //2
  printLL(head);   // 2 6 4 72 4 
  //3
  
  head= inseetathead(head,67);  //67 2 2 6 4 72 4 
  printLL(head);
  //4
head= insertattail(head,89);
  printLL(head);   //67 2 2 6 4 72 4 89 

  //5
head = insertatk(head, 300, 5);
 printLL(head);      //67 2 2 6 4 300 72 4 89 
 
 //6
 head= insertbeforeval(head,6,400);
 printLL(head);    //67 2 2 400 6 300 4 72 4 89 

//   Node* temp = head;
//   while(temp){
//       cout<< temp-> data << " ";
//       temp = temp->next;
//   }    //2 6 4 72 4
    return 0;
}
