// Online C++ compiler to run C++ program online
#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
   cout<< "\t \t \t WELCOME TO CALCULATOR"<<endl;
   int a,b;
   cout<<"Enter first number :";
   cin>>a;
   cout<<"\n Enter second number :";
   cin>>b;
   cout<<endl;
   int ch;
   cout<<"Enter operation : \n 1.Add \n 2.Subtarct\n 3.Multiplication \n 4. Division"<<endl;
   cin>>ch;
  
       switch(ch){
           case 1 : cout<<"Addition of "<<a <<" and "<<b<<" is :"<<a+b;
           break; 
           case 2 : cout<<"Subtraction of "<<a <<" and "<<b<<" is :"<<a-b;
           break;
           case 3: cout<<"Multiplication of "<<a <<" and "<<b<<" is :"<<a*b;
           break;
           case 4 : cout<<"Division of "<< a <<" and "<<b<<" is :"<<a/b;
           break;
           default : cout<<"Enter valid choice!"<<endl;
           break;
       }
//       	 	 	 WELCOME TO CALCULATOR
// Enter first number :5

//  Enter second number :3

// Enter operation : 
//  1.Add 
//  2.Subtarct
//  3.Multiplication 
//  4. Division
// 3
// Multiplication of 5 and 3 is :15

   
    return 0;
}
