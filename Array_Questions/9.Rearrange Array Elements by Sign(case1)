class Solution {
public:
    vector<int> rearrangeArray(vector<int>& nums) {
        int n = nums.size();
        int pI= 0, nI = 1;
        vector<int> ans(n,0);
        for(int i =0;i<n;i++){
            if(nums[i]<0){
                ans[nI]= nums[i];
                nI+=2;
            }
            else{
                ans[pI]=nums[i];
                pI+=2;
            }
        }
        return ans;
    }
};
