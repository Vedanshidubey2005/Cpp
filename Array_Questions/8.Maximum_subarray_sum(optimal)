long long maxSubarraySum(vector<int> arr, int n)
{
    
    long long maxi =LONG_MIN , sum=0;
    for(int i =0;i<n;i++){
        sum=sum+arr[i];
        if(sum>maxi){
            maxi=sum;
        }
        if(sum<0){
            sum=0;
        }
        if(maxi<0){
            maxi=0;
        }
    }
    return maxi;
}
